<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <Switch
        android:id="@+id/switch_activate"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Activar"
        android:textSize="60px"/>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 30%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_30"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="20 km/h"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 50%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_50"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="35 km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 70%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_70"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="50 km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 85%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_85"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="65 km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 100%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_100"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="80 km/h"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginTop="40px"
            android:orientation="vertical"
            android:background="@drawable/border_simple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:text="Velocidad:"
                android:textSize="50px"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:text="32 km/h"
                android:textSize="90px"
                android:textAlignment="gravity"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/colorAccent"/>



        </LinearLayout>



    </LinearLayout>


</LinearLayout>