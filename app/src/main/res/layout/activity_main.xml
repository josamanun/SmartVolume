<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.MainActivity">


    <Switch
        android:id="@+id/switch_activate"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Activar"
        android:textSize="60px"/>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 30%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_level_1"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                android:hint="20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="km/h"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 50%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_level_2"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                android:hint="35"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 70%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_level_3"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                android:hint="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 85%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_level_4"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                android:hint="65"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="km/h"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Volumen 100%:"
                android:textSize="40px"/>

            <EditText
                android:id="@+id/et_level_5"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3"
                android:hint="80"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="km/h"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:background="@drawable/border_simple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:text="Velocidad"
                android:textSize="50px"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:text="0"
                    android:textSize="90px"
                    android:textAlignment="viewEnd"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:layout_marginLeft="20px"
                    android:text="km/h"
                    android:textSize="70px"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>